{

  "manifest_version": 2,
  "name": "Fit-tagger",
  "version": "1.0.1",

  "description": "An extension for students of Faculty of Information Technology at Brno University of Technology. Provides simple year tags corresponding to each name.",

  "icons": {
    "48": "icons/fit-tagger-48.png"
  },

  "browser_action": {
    "default_icon": "icons/fit-tagger-48.png",
    "theme_icons": [{
        "light": "icons/fit-tagger-48.png",
        "dark": "icons/fit-tagger-48.png",
        "size": 48
    }],
    "default_title": "Fit-tagger",
    "default_popup": "popup/main-menu.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/groups/1127391613999255*"],
      "js": ["fit-tagger.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "*://www.stud.fit.vutbr.cz/~xsismi01/fit_ranks/index.php"
  ]

}
