{

  "manifest_version": 2,
  "name": "Border",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/groups/fitbit2016/*"],
      "js": ["borderify.js"]
    }
  ],

  "permissions": [
    "<all_urls>"
  ]

}
