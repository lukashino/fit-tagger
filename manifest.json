{

  "manifest_version": 2,
  "name": "Fit-tagger",
  "version": "1.0.2",

  "description": "An extension for students of Faculty of Information Technology at Brno University of Technology. Provides simple year tags corresponding to each name.",
  
  "sidebar_action": {
    "default_title": "Fit-tagger",
    "default_panel": "sidebar/main-menu.html",
    "default_icon": "icons/fit-tagger-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mbasic.facebook.com/*", "*://*.m.facebook.com/*"],
      "js": ["fit-tagger.js", "content_scripts/content.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "storage"
  ]

}
